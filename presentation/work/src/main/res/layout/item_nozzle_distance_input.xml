<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="uiModel"
            type="com.gyorgyzoltan.sprayApp.work.nozzleDistancePicker.list.NozzleDistanceInputViewHolder.UiModel" />

    </data>

    <NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_content_padding"
        android:layout_marginLeft="@dimen/large_content_padding"
        android:layout_marginTop="@dimen/content_padding"
        android:layout_marginEnd="@dimen/large_content_padding"
        android:layout_marginRight="@dimen/large_content_padding"
        app:maxValue="@{uiModel.maximumValue}"
        app:minValue="@{uiModel.minimumValue}"
        app:value="@{uiModel.value}" />

</layout>